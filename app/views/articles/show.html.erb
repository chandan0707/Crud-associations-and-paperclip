<h1 style="color:blue"><%= @article.title %></h1>

<p><%= image_tag @article.image.url(:medium) %></p>



<p style="color:red"><%= @article.body %></p>
<h3>Comments (<%= @article.comments.count %>)</h3>

<%= render :partial => 'comment', :collection => @article.comments %>
<%= render :partial => 'comment_form' %>



<%= link_to " Home", articles_path %>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp   
<%= link_to "Delete", article_path(@article), :method => :delete,  :confirm => "Really delete the article?"%>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp   
<%= link_to "Edit Current Article", edit_article_path(@article) %>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp   
<%= link_to "New Article", new_article_path, :class => "new_article" %>

